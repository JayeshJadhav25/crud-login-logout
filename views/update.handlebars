


  <section class="container-fluid bg">
        <section class="row justify-content-center">
          <section class="col-12 col-sm-6 col-md-4"> 
            <div class="container">
                <form action="/updatestudent" class="form-container" method="POST">
               <h1>Update Student </h1>
                <hr>
                <input type="hidden" name="_id" value="{{student._id}}">
                    <div class="form-group">
                    <label for="exampleInput">Name</label>
                    <input type="text"
                     placeholder="Enter name"
                     required 
                     class="form-control"
                     id="exampleInput"
                     value="{{student.name}}" 
                     name='na'>
                    </div>
                    
                    
                    <div class="form-group">
                    <label for="exampleInputEmail1">Qualification</label>
                    <input type="text"
                     placeholder="Enter qualification"
                     required 
                     class="form-control"
                     id="exampleInputEmail1" 
                     value="{{student.Qualification}}" 
                     name='quali'>
                    </div>

                    <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email"
                     placeholder="Enter email"
                     required 
                     class="form-control"
                     id="exampleInputEmail1" 
                     name='email'
                     value="{{student.email}}" 
                     aria-describedby="emailHelp">                     
                    </div>

                    <div class="form-group">
                    <label for="exampleInputCity">City</label>
                    <input type="text" 
                     placeholder="Enter city name"   
                     required
                     class="form-control" 
                     name='city'
                     value="{{student.city}}" 
                     id="exampleInputCity">
                    </div>

                  
                    
                    
                    <button type="submit" class="btn btn-primary btn-block">Update</button><br>
                <a class="btn btn-secondary btn-block" href="/viewstudent">View all Student</a>
                </form>  
            </div>
          </section>
          </section>
          </section>
    
</form>

